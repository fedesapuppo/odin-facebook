<div class="container d-flex align-items-center justify-content-center vh-100">
  <div class="row text-center align-items-center">
    <div class="col-12">
      <h1>Welcome to Facebook!</h1>
    </div>
    <div class="col-12 mt-3">
      <% if current_user %>
        <p>Logged in as <%= current_user.email %></p>
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" %>
      <% else %>
        <%= link_to "Login", new_user_session_path, class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
        <%= link_to "Sign up", new_user_registration_path, class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
      <% end %>
    </div>
  </div>
</div>
