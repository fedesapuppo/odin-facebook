<% if !friend_request_sent?(user) %>
  <%= form_with model: FriendRequest.new,
  url: friend_requests_path,
  method: :post do |f| %>
    <%= f.hidden_field :receiver_id, value: user.id %>
    <%= f.submit "Send Friend Request", class: "btn btn-success" %>
  <% end %>
<% else %>
  <%= form_with model: FriendRequest.find_by(requester_id: current_user.id,
  receiver_id: user.id),
  method: :delete do |f| %>
    <%= f.submit "Unsend", class: "btn btn-danger" %>
  <% end %>
<% end %>
