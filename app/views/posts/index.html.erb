<div class="trix-content container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-4">Timeline</h1>
  <%= link_to "New Post", new_post_path, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-4 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
  <% if @posts.any? %>
    <div class="space-y-6">
      <% @posts.each do |post| %>
        <div class="post bg-white shadow-md rounded-lg p-6">
          <h2 class="text-2xl font-semibold mb-2"><%= link_to post.title, post_path(post), class: "text-blue-600 hover:text-blue-800" %></h2>
          <p class="mb-4"><%= post.content %></p>
          <p class="mb-2 text-gray-600">This post has <%= pluralize(post.likes.count, "like") %>!</p>
          <%= render "like_button", post: post %>
          <p class="mt-4 text-gray-500">Posted by: <%= post.user.name %></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500">No posts to display.</p>
  <% end %>
</div>
