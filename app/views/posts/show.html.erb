<div class="post">
  <h1><%= @post.title %></h1>
  <p><%= @post.content %></p>
  <p>Posted by: <%= @post.user.name %></p>
</div>
<% if @post.user == current_user %>
  <%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-primary" %>
  <%= button_to "Delete", post_path(@post), method: :delete, class: "btn btn-danger" %>
<% end %>
<%= link_to 'Back to Posts', posts_path, class: "btn btn-primary" %>